{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
